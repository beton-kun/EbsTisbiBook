@model EditUserViewModel
@{
    ViewData["Title"] = "Редактирование пользователя";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<form asp-action="Edit" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Surname" class="control-label">Дата рождения</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Name" class="control-label">Дата рождения</label>
        <input type="text" asp-for="Name" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Middlename" class="control-label">Дата рождения</label>
        <input type="text" asp-for="Middlename" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="BirthDate" class="control-label">Дата рождения</label>
        <input type="number" asp-for="BirthDate" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Сохранить" class="btn btn-outline-secondary" />
    </div>
</form>