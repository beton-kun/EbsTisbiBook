@model Book
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/shared.css">
    <link rel="stylesheet" href="~/css/book.css">

    <title>Document</title>
</head>
<body>
    <section id="content" class="content">
        <div class="main-container">
            <div class="wrapper">
                <div class="cover-info-group">
                    <div>
                        <div class="book-background">
                            <img class="book-cover" src="@Model.Image" alt="">
                        </div>
                        <form action="@Model.Url">
                            <button class="read-book-btn" type="submit">
                                Читать
                            </button>
                        </form>
                    </div>
                    <div class="about-book">
                        <div class="book-info-container">
                            <div class="text-container">
                                <h3 class="title">
                                    @Model.Title
                                </h3>
                                <hr size=3px color="#fff">
                                <div class="attributes-container">
                                    <dl class="attribute">
                                        <dt>Издательство:</dt>
                                        <dd>@Model.Pubhouse.Name</dd>
                                    </dl>
                                    <dl class="attribute">
                                        <dt>Авторы:</dt>
                                        <dd>
                                            @foreach (var author in Model.Authors)
                                            {
                                                @($"{author.Surname} {author.Name[0]}. {author.Middlename[0]}.,")
                                            }
                                        </dd>
                                    </dl>
                                    @if (Model.Liability != null)
                                    {
                                        <dl class="attribute">
                                            <dt>Сведения об ответственности:</dt>
                                            <dd>@Model.Liability</dd>
                                        </dl>
                                    }

                                    @if (Model.TitleAdditional != null)
                                    {
                                        <dl class="attribute">
                                            <dt>Сведения об издании:</dt>
                                            <dd>@Model.TitleAdditional</dd>
                                        </dl>
                                    }
                                    <dl class="attribute">
                                        <dt>Год издания:</dt>
                                        <dd>@Model.Pubyear</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                        <div class="book-info-container">
                            <div class="text-container">
                                <h3 class="title">
                                    Об издании
                                </h3>
                                <hr size=3px color="#fff">
                                <div class="attributes-container">
                                    @Model.Description
                                </div>
                            </div>
                        </div>
                        <div class="book-info-container">
                            <div class="text-container">
                                <h3 class="title">
                                    Библиографическая запись
                                </h3>
                                <hr size=3px color="#fff">
                                <div class="attributes-container">
                                    @Model.BibliographicRecord
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>