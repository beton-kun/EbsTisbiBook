@model LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">

    <link rel="preconnect" href="https://fonts.gstatic.com">
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;1,400&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/css/sign-in.css">
    <link rel="stylesheet" href="~/css/shared.css">
    <title>Document</title>
</head>
<body>
    <section id="content" class="content">
        <div class="main-container">
            <div class="wrapper">
                <div class="sign-in-container">
                    <div class="text-container">
                        <h3 class="title">
                            Вход в систему
                            <hr size=3px color="#fff">
                        </h3>
                        <form method="post" class="authentication" asp-controller="Account" asp-action="Login"
                              asp-route-returnUrl="@Model.ReturnUrl">
                            <div>
                                <label asp-for="Email"></label><br />
                                <input asp-for="Email" />
                                <span asp-validation-for="Email"></span>
                            </div>
                            <div>
                                <label asp-for="Password"></label><br />
                                <input asp-for="Password" />
                                <span asp-validation-for="Password"></span>
                            </div>
                            <div class="remember-me">
                                <div class="left-column">
                                    <label asp-for="RememberMe"></label>
                                </div>
                                <div class="right-column">
                                    <input asp-for="RememberMe" />
                                </div>
                            </div>
                            <div>
                                <button type="submit" class="signin-button" />
                                    Вход
                            </div>
                        </form>

                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>